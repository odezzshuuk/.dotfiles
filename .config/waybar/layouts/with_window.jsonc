{
    "layer" : "top",
    "position" : "top",
    "width" : 1920,
    "margin" : "5 0",

    "group/gleft1" : {
        "orientation": "horizontal",
        "modules" : [
            "temperature","battery", "pulseaudio", "backlight"
        ]
    },

    "group/gleft2" : {
        "orientation": "horizontal",
        "modules" : [
            "hyprland/window"
        ]
    },


    "group/gright1" : {
        "orientation": "horizontal",
        "modules" : [
            "tray", "cpu","memory"
        ]
    },

    "group/gright2" : {
        "orientation": "horizontal",
        "modules" : [
            // "bluetooth", 
            "network", 
            "clock"
        ]
    },

    "modules-left"   : ["custom/start", "group/gleft1", "group/gleft2"],
    "modules-center" : ["hyprland/workspaces"],
    "modules-right"  : [ "group/gright1", "group/gright2", "custom/ctlcenter"],

    "include": [ "~/.config/waybar/modules.jsonc" ]
}
